<odoo>
    <record id="event_event_view_form" model="ir.ui.view">
        <field name="name">event.event.view.form.inherit.question</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="website_event_questions.event_event_view_form" />
        <field name="arch" type="xml">
            <field name="once_per_order" position="after">
                <field name="free_text" />
            </field>
            <field name="answer_ids" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('free_text', '=', True)]}</attribute>
            </field>
            <xpath expr="//group/div/field[@name='once_per_order']" position="before">
                <field name="free_text" />
                <label for="free_text" />
            </xpath>
            <xpath expr="//notebook/page[@name='answers']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('free_text', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="event_registration_view_form_inherit_question">
        <field name="model">event.registration</field>
        <field
            name="inherit_id"
            ref="website_event_questions.event_registration_view_form_inherit_question"
        />
        <field name="arch" type="xml">
            <field name="registration_answer_ids" position="after">
                <field name="free_answer_ids" readonly="1" widget="many2many_tags" />
            </field>
        </field>
    </record>
</odoo>
