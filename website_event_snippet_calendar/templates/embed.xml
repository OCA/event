<odoo>
    <!-- Individual snippets -->
    <template
        id="embed"
        name="Events Calendar and List"
        inherit_id="website.layout"
        primary="True">
        <!-- Replace the whole page to include only the snippet -->
        <xpath expr="//div[@id='wrapwrap']" position="replace">
            <div id="wrapwrap">
                <main>
                    <t t-call="website_event_snippet_calendar.s_event_calendar_list"/>
                </main>
            </div>
        </xpath>
    </template>
</odoo>
