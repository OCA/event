<openerp>
<data>

<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">Course products</field>
    <field name="model">product.template</field>
    <field name="inherit_id"
           ref="event_training.product_template_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//group[@name='grade']" position="after">
            <group name="duration">
                <field name="duration_ids">
                    <tree editable="bottom">
                        <field name="type_id"/>
                        <field name="duration" widget="float_time"/>
                    </tree>
                </field>
                <button
                    name="action_fill_duration_ids"
                    string="Load from event type"
                    help="Remove current durations and load the expected ones"
                    type="object"/>
            </group>
        </xpath>
    </field>
</record>

</data>
</openerp>
