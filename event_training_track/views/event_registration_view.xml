<openerp>
<data>

<record id="view_event_registration_form" model="ir.ui.view">
    <field name="name">Attended training tracks</field>
    <field name="model">event.registration</field>
    <field name="inherit_id" ref="event_training.view_event_registration_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//group[@name='training']">
                <group colspan="2">
                    <field
                        name="attended_track_ids"
                        context="{
                            'default_event_id': event_id,
                        }">
                        <tree>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="duration"/>
                            <field name="duration_type_id"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
