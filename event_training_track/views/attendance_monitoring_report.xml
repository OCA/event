<openerp>
<data>

<!-- Templates -->
<template id="track_attendance_monitoring_report">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="event_training_track.attendance_monitoring_report"/>
        </t>
    </t>
</template>

<template id="event_attendance_monitoring_report">
    <t t-call="report.html_container">
        <t t-foreach="docs.mapped('track_ids')" t-as="o">
            <t t-if="o.monitor_attendance">
                <t t-call="event_training_track.attendance_monitoring_report"/>
            </t>
        </t>
    </t>
</template>

<template id="attendance_monitoring_report">
    <t t-call="report.external_layout">
        <div class="page container">
            <!-- Format columns according to number of present fields -->
            <t t-set="calc_cols"
               t-value="lambda *args: int(
                    12 / (sum(int(bool(f)) for f in args) or 24))"/>

            <h1>Attendance Monitoring</h1>

            <t t-set="span"
               t-value="calc_cols(1, 1, o.event_id.product_id)"/>
            <div class="row">
                <div t-attf-class="col-xs-#{span}">
                    <label>Event Name</label>
                    <p t-esc="o.event_id.display_name"/>
                </div>
                <div t-attf-class="col-xs-#{span}"
                     t-if="o.event_id.product_id">
                    <label>Training Action</label>
                    <p t-esc="o.event_id.product_id.display_name"/>
                </div>
                <div t-attf-class="col-xs-#{span}">
                    <label>Track Name</label>
                    <p t-esc="o.display_name"/>
                </div>
            </div>

            <t t-set="span"
               t-value="calc_cols(o.event_id.organizer_id,
                                  o.date,
                                  o.duration)"/>
            <div class="row">
                <div t-attf-class="col-xs-#{span}"
                     t-if="o.event_id.organizer_id">
                    <label>Event Organizer</label>
                    <p t-esc="o.event_id.organizer_id.display_name"/>
                </div>
                <div t-attf-class="col-xs-#{span}" t-if="o.date">
                    <label>Track Date</label>
                    <p t-esc="o.date"/>
                </div>
                <div t-attf-class="col-xs-#{span}" t-if="o.duration">
                    <label>Track Duration</label>
                    <p><t t-esc="o.duration"/> hour(s)</p>
                </div>
            </div>

            <t t-set="span"
               t-value="calc_cols(o.speaker_ids,
                                  o.location_id)"/>
            <div class="row" t-if="span">
                <div t-attf-class="col-xs-#{span}" t-if="o.speaker_ids">
                    <label>Speakers</label>
                    <p>
                        <t t-foreach="o.speaker_ids" t-as="speaker">
                            <t t-esc="speaker.display_name +
                                ('.' if speaker_last else ',')"/>
                        </t>
                    </p>
                </div>
                <div t-attf-class="col-xs-#{span}" t-if="o.location_id">
                    <label>Location</label>
                    <p t-esc="o.location_id.display_name"/>
                </div>
            </div>

            <div class="row">
                <div id="attendees" class="col-xs-12">
                    <h3>Attendee list</h3>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Signature</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.event_id.registration_ids"
                                t-as="registration">
                                <td t-esc="registration.display_name"/>
                                <td/>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</template>

<!-- Report actions -->
<report
    id="track_attendance_monitoring_action"
    model="event.track"
    name="event_training_track.track_attendance_monitoring_report"
    string="Attendance Monitoring"
    report_type="qweb-pdf"
    groups="event_training.group_user"/>

<report
    id="event_attendance_monitoring_action"
    model="event.event"
    name="event_training_track.event_attendance_monitoring_report"
    string="Attendance Monitoring"
    report_type="qweb-pdf"
    groups="event_training.group_user"/>

</data>
</openerp>
