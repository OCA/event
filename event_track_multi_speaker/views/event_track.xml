<?xml version="1.0" ?>
<odoo>
    <record id="view_event_track_form" model="ir.ui.view">
        <field name="model">event.track</field>
        <field name="inherit_id" ref="website_event_track.view_event_track_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="speakers" string="Speakers">
                    <field name="speaker_ids">
                        <tree editable="bottom">
                            <field name="name" />
                            <field name="status" />
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='speaker']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
