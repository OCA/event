<openerp>
<data>

<record id="view_event_registration_form" model="ir.ui.view">
    <field name="name">Grades</field>
    <field name="model">event.registration</field>
    <field name="inherit_id" ref="event.view_event_registration_form"/>
    <field name="arch" type="xml">
        <xpath expr="//sheet[@string='Registration']">
            <group string="Training"
                   name="training"
                   attrs="{'invisible': [('is_training', '=', False)]}">
                <group>
                    <field name="is_training" invisible="True"/>
                    <field name="grade"/>
                    <field name="passing"/>
                </group>
            </group>
        </xpath>
    </field>
</record>

</data>
</openerp>
