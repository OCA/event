    <template
        id="registration_event_question"
        name="Registration Event Question"
        inherit_id="website_event_questions.registration_event_question"
    >
        <xpath expr="//span" position="after">
            <t t-if="question.question_type == 'date'">
                <input
                    type="date"
                    t-attf-name="question_date-#{registration_index}-#{question.id}"
                    class="col-lg-12 form-control"
                    t-att-required="question.is_mandatory_answer"
                />
            </t>
            <t t-if="question.question_type == 'date_time'">
                <input
                    type="text"
                    t-attf-name="question_date-#{registration_index}-#{question.id}"
                    t-attf-id="datetimepicker_#{question.id}"
                    class="col-lg-12 form-control datetimepicker-input"
                    t-att-required="question.is_mandatory_answer"
                    data-toggle="datetimepicker"
                    t-attf-data-target="#datetimepicker_#{question.id}"
                    data-date-format="YYYY-MM-DDTHH:mm"
                />
            </t>
        </xpath>
    </template>

</odoo>
