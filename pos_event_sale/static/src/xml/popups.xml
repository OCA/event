<templates id="template" xml:space="preserve">
    <t t-name="EventSelectorPopup">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text popup-event-selector">
                <header class="title">
                    <t t-esc=" widget.options.title || '' " />
                </header>
                <main>
                    <section class="left-content">
                        <div class="o_calendar_widget" />
                    </section>
                    <section class="right-content touch-scrollable scrollable-y">
                        <div class="event-selector" />
                    </section>
                </main>
                <footer class="footer">
                    <div class="button cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>
    <t t-name="EventSelectorList">
        <ul t-if="events.length" class="event-list">
            <!-- Populated by renderEventSelector -->
        </ul>
        <p t-else="">
            There aren't events on these dates.
        </p>
    </t>
    <t t-name="EventSelectorListItem">
        <li
            t-att-data-id="event.id"
            t-attf-class="event-list-item #{seats_available &lt;= 0 ? 'disabled' : ''}"
        >
            <div class="event-list-item-container">
                <div class="event-title">
                    <span class="event-name" t-esc="event.display_name" />
                </div>
                <div class="event-subtitle">
                    <span
                        class="event-country"
                        t-if="event.country_id.length"
                        t-esc="event.country_id[1]"
                    />
                </div>
                <div class="event-info">
                    <div class="event-date-begin">
                        <b>
                            <i class="fa fa-clock-o" />
                            <span>From</span>
                        </b>
                        <t t-esc="moment(event.date_begin).format('lll')" />
                    </div>
                    <div class="event-date-end">
                        <b>
                            <i class="fa fa-clock-o" />
                            <span>To</span>
                        </b>
                        <t t-esc="moment(event.date_end).format('lll')" />
                    </div>
                </div>
                <!-- Availability indicator -->
                <t t-call="EventAvailabilityBadge" />
            </div>
        </li>
    </t>
    <t t-name="EventTicketsPopup">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text popup-event-tickets">
                <header class="title">
                    <t t-esc=" widget.options.title || '' " />
                </header>
                <main>
                    <div class="product-list-scroller touch-scrollable scrollable-y">
                        <div t-if="widget.tickets.length" class="product-list">
                        </div>
                        <div t-else="" class="product-list-empty">
                            <p>There are no event tickets for this event</p>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button cancel">
                        Close
                    </div>
                </footer>
            </div>
        </div>
    </t>
    <t t-name="EventTicketListItem">
        <article
            t-attf-class="product ticket #{seats_available &lt;= 0 ? 'disabled' : ''}"
            t-att-data-id="ticket.id"
            tabindex="0"
            t-attf-aria-labelledby="article_event_ticket_#{ticket.id}"
        >
            <div class="product-img">
                <img t-att-src="image_url" alt="Product image" />
                <span class="price-tag">
                    <t t-esc="widget.format_currency(ticket.price, 'Product Price')" />
                </span>
                <!-- Availability indicator -->
                <t t-call="EventAvailabilityBadge" />
            </div>
            <div
                class="product-name ticket-name"
                t-attf-id="article_ticket_#{ticket.id}"
            >
                <t t-esc="ticket.name" />
            </div>
        </article>
    </t>
    <t t-name="EventAvailabilityBadge">
        <t t-if="seats_available &lt; 0">
            <span class="status-tag bg-danger">Oversold</span>
        </t>
        <t t-if="seats_available == 0">
            <span class="status-tag bg-danger">Sold out</span>
        </t>
        <t t-if="seats_available &gt; 0 and window.Number.isFinite(seats_available)">
            <t
                t-set="warning_threshold"
                t-value="widget.pos.config.iface_event_seats_available_warning"
            />
            <t t-if="!warning_threshold or seats_available &lt;= warning_threshold">
                <span class="status-tag bg-warning">
                    <t t-esc="_.str.sprintf(_t('%s remaining'), seats_available)" />
                </span>
            </t>
        </t>
    </t>
</templates>
