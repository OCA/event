<?xml version="1.0" ?>
<odoo>


    <record id="view_event_track_form" model="ir.ui.view">
        <field name="model">event.track</field>
        <field name="inherit_id" ref="website_event_track.view_event_track_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">

            <page name="equipments" string="Equipments">
                <field name="equipment_line_ids">
                    <tree editable="bottom">
                        <field name="quantity" />
                        <field name="equipment_id" options="{'no_create': True}" />
                    </tree>
                </field>
            </page>
        </xpath>
        </field>
    </record>
</odoo>
