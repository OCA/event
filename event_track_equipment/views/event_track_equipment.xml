<?xml version="1.0" ?>
<odoo>


    <record model="ir.actions.act_window" id="action_event_track_equipment">
        <field name="name">Event Equipments</field>
        <field name="res_model">event.track.equipment</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Track Equipment
            </p>
            <p>
                Manage from here the equipments needed for tracks.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_event_track_equipment"
        name="Track Equipments"
        action="action_event_track_equipment"
        parent="event.menu_event_configuration"
    />

    <record model="ir.ui.view" id="view_event_location_tree">
        <field name="name">Event Track Equipment</field>
        <field name="model">event.track.equipment</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>
