<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<act_window
    id="generator_action"
    name="Generate quotations"
    src_model="event.registration"
    res_model="event_sale_pro.quotation_generator"
    view_mode="form"
    target="new"
    key2="client_action_multi"/>

<record id="generator_view_form" model="ir.ui.view">
    <field name="name">Event sale order generator</field>
    <field name="model">event_sale_pro.quotation_generator</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="event_id"/>
                <field name="event_type_id"/>
                <field name="product_id"/>
                <field name="group_by_commercial_entity"/>
            </group>
            <footer>
                <button name="action_generate"
                        type="object"
                        string="Generate sale orders"
                        class="oe_highlight"/>
                or
                <button special="cancel" string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

</data>
</openerp>
