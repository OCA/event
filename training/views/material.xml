<openerp>
<data>

<!-- Views -->
<record id="material_tree" model="ir.ui.view">
    <field name="name">Training material tree</field>
    <field name="model">training.material</field>
    <field name="arch" type="xml">
        <tree editable="top">
            <field name="name"/>
            <field name="type_id"/>
        </tree>
    </field>
</record>

<record id="material_form" model="ir.ui.view">
    <field name="name">Training material form</field>
    <field name="model">training.material</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="type_id"/>
                <field name="event_ids"/>
                <field name="training_action_ids"/>
            </group>
        </form>
    </field>
</record>

<record id="material_search" model="ir.ui.view">
    <field name="name">Training action search</field>
    <field name="model">training.material</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <group string="Group By">
                <filter string="Type"
                        help="Group materials by type"
                        context="{'group_by': 'type_id'}"/>
            </group>
        </search>
    </field>
</record>

<!-- Actions -->
<record id="open_materials_view" model="ir.actions.act_window">
    <field name="name">Training materials</field>
    <field name="res_model">training.material</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{
        "training_mode": True,
    }</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new training material.
        </p>
        <p>
            A training material is any resource used in the training groups
            given to all students.
        </p>
        <p>
            Examples: Book, pen, notebook, etc.
        </p>
    </field>
</record>

<!-- Menus -->
<menuitem id="material_menu"
          parent="configuration_menu"
          groups="base.group_no_one,manager_group"
          name="Materials"
          action="open_materials_view"/>

</data>
</openerp>
