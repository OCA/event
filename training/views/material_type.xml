<openerp>
<data>

<!-- Views -->
<record id="material_type_tree" model="ir.ui.view">
    <field name="name">Training material type tree</field>
    <field name="model">training.material_type</field>
    <field name="arch" type="xml">
        <tree editable="top">
            <field name="name"/>
        </tree>
    </field>
</record>

<record id="material_type_form" model="ir.ui.view">
    <field name="name">Training material type form</field>
    <field name="model">training.material_type</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="material_ids"/>
            </group>
        </form>
    </field>
</record>

<record id="material_type_search" model="ir.ui.view">
    <field name="name">Training action search</field>
    <field name="model">training.material_type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
        </search>
    </field>
</record>

<!-- Actions -->
<record id="open_material_types_view" model="ir.actions.act_window">
    <field name="name">Training material types</field>
    <field name="res_model">training.material_type</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{
        "training_mode": True,
    }</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new training material type.
        </p>
        <p>
            A training material type is a classification of the training
            materials used in training groups and actions.
        </p>
        <p>
            Examples: Physical, electronic, etc.
        </p>
    </field>
</record>

<!-- Menus -->
<menuitem id="material_type_menu"
          parent="configuration_menu"
          groups="base.group_no_one,manager_group"
          name="Material types"
          action="open_material_types_view"/>

</data>
</openerp>
