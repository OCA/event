<openerp>
<data>

<!-- Views -->
<record id="course_type_tree" model="ir.ui.view">
    <field name="name">Training type tree</field>
    <field name="model">training.course_type</field>
    <field name="arch" type="xml">
        <tree editable="top">
            <field name="name"/>
            <field name="expected_duration_type_ids" widget="many2many_tags"/>
        </tree>
    </field>
</record>

<record id="course_type_form" model="ir.ui.view">
    <field name="name">Training type form</field>
    <field name="model">training.course_type</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="expected_duration_type_ids" widget="many2many_tags"/>
            </group>
        </form>
    </field>
</record>

<record id="course_type_search" model="ir.ui.view">
    <field name="name">Training type search</field>
    <field name="model">training.course_type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="expected_duration_type_ids"/>
        </search>
    </field>
</record>

<!-- Courses -->
<record id="open_course_types_view" model="ir.actions.act_window">
    <field name="name">Course types</field>
    <field name="res_model">training.course_type</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{
        "training_mode": True,
    }</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new course type.
        </p>
        <p>
            A training type defines what is to be expected for training
            courses of that type.
        </p>
        <p>
            For example, they define what type of hours that course
            should have.
        </p>
    </field>
</record>

<!-- Menus -->
<menuitem id="course_types_menu"
          parent="configuration_menu"
          groups="base.group_no_one,manager_group"
          name="Course types"
          action="open_course_types_view"/>

</data>
</openerp>
