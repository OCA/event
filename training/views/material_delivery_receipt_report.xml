<openerp>
<data>

<!-- Templates -->
<template id="material_delivery_receipt_report">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(
                doc_id, doc_model, 'partner_id.lang',
                'training.material_delivery_receipt_report_translatable')"/>
        </t>
    </t>
</template>

<template id="material_delivery_receipt_report_translatable">
    <t t-call="report.external_layout">
        <div class="page row">
            <div class="col-xs-12">
                <h1>Training Materials Delivery Receipt</h1>
                <p>
                    <strong>
                        <t t-if="o.partner_id and o.partner_id.title"
                           t-esc="o.partner_id.title.shortcut or
                                  o.partner_id.title.name"/>
                        <t t-esc="o.name"/>
                    </strong>
                    certifies having recieved the following training materials:
                </p>
            </div>
            <div class="col-xs-12 col-xs-offset-1">
                <ul>
                    <li t-foreach="o.event_id.material_ids"
                        t-as="material">
                        <t t-esc="material.name_get()[0][1]"/>
                    </li>
                </ul>
            </div>
            <div class="col-xs-12">
                <p>
                    These materials have been delivered for the course
                    <strong t-esc="(o.course_id or
                                    o).name_get()[0][1]"/>.
                </p>
            </div>
            <div style="border: thin solid"
                 class="col-xs-4 mt32 col-xs-offset-1">
                <h3>Signed</h3>
                <p class="mt128" t-esc="o.name"/>
            </div>
        </div>
    </t>
</template>

<!-- Report action -->
<report
    id="material_delivery_receipt_action"
    model="event.registration"
    name="training.material_delivery_receipt_report"
    string="Training Materials Delivery Receipt"
    report_type="qweb-pdf"
    groups="user_group"
    multi="False"/>

</data>
</openerp>
